root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 120
trim_trailing_whitespace = true

# ==========================================
# Kotlin & Gradle Kotlin files
# ==========================================
[{*.kt,*.kts}]

# Style Kotlin officiel dans l'IDE
ij_kotlin_code_style_defaults = KOTLIN_OFFICIAL

# ----- LIGNES VIDES -----

# Max 2 lignes vides consécutives dans le code
ij_kotlin_keep_blank_lines_in_code = 2

# 1 seule ligne vide entre déclarations (fonctions, propriétés…)
ij_kotlin_keep_blank_lines_in_declarations = 1

# 1 seule ligne vide avant l'accolade fermante (classe / fichier)
ij_kotlin_keep_blank_lines_before_right_brace = 1

# Laisser les retours à la ligne existants quand c'est possible
ij_kotlin_keep_line_breaks = true
ij_kotlin_keep_indents_on_empty_lines = false

# ----- IMPORTS / WILDCARDS -----

# Désactiver les wildcard imports en pratique
ij_kotlin_name_count_to_use_star_import = 2147483647
ij_kotlin_name_count_to_use_star_import_for_members = 2147483647

# Autoriser les wildcard imports UNIQUEMENT pour java.util.*
ij_kotlin_packages_to_use_import_on_demand = java.util.*

# ----- VIRGULES FINALES (trailing commas) -----

# Autoriser (et faire respecter par ktlint) les trailing commas
ij_kotlin_allow_trailing_comma = true
ij_kotlin_allow_trailing_comma_on_call_site = true

# Supprimer les erreurs concernant le naming des fun composables
ktlint_standard_function-naming = disabled
