{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.tsbuildinfo",

    "module": "ESNext",
    "moduleResolution": "bundler",

    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "types": ["react", "react-native"]
  },
  "include": ["src"],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "references": [
    {
      "path": "../packages/core-config-ts"
    },
    {
      "path": "../packages/http-client-ts"
    },
    {
      "path": "../packages/core-constants-ts"
    },
    {
      "path": "../packages/core-dto-ts"
    },
    {
      "path": "../packages/core-logger-ts"
    },
    {
      "path": "../packages/core-domain-ts"
    }
  ]
}
